generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Station {
  id        String @id
  name      String
  latitude  Float
  longitude Float
  elevation Float

  daySummaries       DaySummary[]
  daySummaryAverages DaySummaryAverage[]

  @@map("station")
}

model DaySummary {
  stationId String   @map("station_id")
  date      DateTime @db.Date
  temp      Float?
  dewp      Float?
  wdsp      Float?
  max       Float?
  min       Float?
  prcp      Float?
  frshtt    String

  station Station @relation(fields: [stationId], references: [id])

  @@id([stationId, date])
  @@map("day_summary")
}

model DaySummaryAverage {
  stationId     String @map("station_id")
  date          String
  yearsIncluded Int
  temp          Float?
  dewp          Float?
  wdsp          Float?
  max           Float?
  min           Float?
  prcp          Float?

  station Station @relation(fields: [stationId], references: [id])

  @@id([stationId, date])
  @@map("day_summary_average")
}
